      <Component Id="libpng16.dll" Guid="0a1605f8-e041-45a3-956b-10efdfa9da20">
        <File Id="libpng16.dll" Source="$(var.SolutionDir)..\..\..\Bin\$(var.Platform)\Release\libpng16.dll" KeyPath="yes" Checksum="yes" ProcessorArchitecture="x64"/>
